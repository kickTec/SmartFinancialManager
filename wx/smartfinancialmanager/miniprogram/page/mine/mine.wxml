<wxs src="../../util/tools.wxs" module="tools" />
<block wx:if='{{!jumpFlag}}'>
  <view>
    <button class="btn" bindtap="queryOpenId" type="primary">查询我的微信openid</button>
  </view>
  <view class="textCl">
    <text style="text-align:center" bindtap='copyText'>{{openid?openid:'查询成功5秒后将自动清除'}}</text>
  </view>
  <view class="textCl">
    <text>版本:{{version}}</text>
  </view>
</block>
<block wx:else>
  <block wx:for="{{fundList}}" wx:key="fundCode">
    <view class="item" bindtap="gotoDetail" id="{{item.fundCode}}">
        <view class="info-left">
            <view class="name">
                {{item.fundName}}
            </view>
            <view class="gainTotal" style="color:{{tools.getColorByGain(item.gainTotal)}}">
                {{dataHeadArray[0]}}: {{item.gainTotal}}%
            </view>
            <view class="grayText">
                {{dataHeadArray[1]}}: {{item.lastNetValue}}
            </view>
            <view class="grayText">
                {{dataHeadArray[2]}}: {{item.curPriceLowest}}
            </view>
        </view>

        <view class="info-right">
            <view class="name">
              <text decode="true">&ensp;&ensp;</text>
            </view>
            <view class='blackText' style="color:{{tools.getColorByGain(item.curGain)}}">
                {{dataHeadArray[3]}}: {{item.curGain}}%
            </view>
            <view class="blackText">
                {{dataHeadArray[4]}}: {{item.curNetValue}}
            </view>
            <view class='grayText'>
                {{dataHeadArray[5]}}: {{item.curPriceHighest}}
            </view>
        </view>
    </view>
    <view class="hr" />
  </block>
</block>
