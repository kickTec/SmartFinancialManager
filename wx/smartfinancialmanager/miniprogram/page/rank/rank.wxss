.item {
    display: flex;
    flex-direction: row;
}
.head_item {
    width: 374rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
}

.head {
    height:80rpx;
    background-color: #D53E37;
    border-top: 1rpx solid #fff;
    border-bottom: 1rpx solid rgba(204, 204, 204, 1);
    display: flex;
    align-items: center;
    top: 0;
}

.ring {
    width: 2rpx;
    height: 100%;
    background-color: rgba(204, 204, 204, 1);
}

.img {
    margin: 10rpx 0 10rpx 10rpx;
}

.info-left {
    display: flex;
    flex-direction: column;
    margin-left: 10px;
    width: 100%;
}

.info-right {
    display: flex;
    flex-direction: column;
    margin-left: 80px;
    width: 100%;
}

.position {
    margin-top: 20rpx;
    width: 60%;
    font-size: 28rpx;
    font-weight: bold;
}

.gainTotal {
    font-size: 28rpx;
    margin-top: 20rpx;
}

.address {
    font-size: 25rpx;
    color: #999;
    margin-top: 20rpx;
}

.lastGain {
    font-size: 25rpx;
    margin-top: 20rpx;
}

.buyBtn {
    position: absolute;
    font-size: 25rpx;
    margin-left: 620rpx;
    margin-top: 55rpx;
    border: red;
    color: red;
}

.buyText {
    font-size: 28rpx;
    margin-top: 20rpx;
    border: red;
    color: red;
}

.sellBtn {
    position: absolute;
    font-size: 25rpx;
    margin-left: 590rpx;
    margin-top: 55rpx;
    border: green;
    color: green;
}

.sellText {
    font-size: 25rpx;
    margin-top: 20rpx;
    border: green;
    color: green;
}

.curGain {
    font-size: 25rpx;
    margin-top: 20rpx;
}

.rendu {
    position: absolute;
    font-size: 25rpx;
    margin-left: 620rpx;
    margin-top: 120rpx;
}

.line {
    align-content: center;
    border: 1px solid #ccc;
    opacity: 0.2;
}

.hr {
    height: 10px;
    background-color: #eee;
}

.btn-area {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
}
