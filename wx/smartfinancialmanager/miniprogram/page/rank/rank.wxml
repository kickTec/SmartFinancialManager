<wxs src="../../util/tools.wxs" module="tools" />
<block wx:for="{{fundList}}" wx:key="fundCode">
    <view class="item" bindtap="gotoDetail" id="{{item.fundCode}}">
        <view class="info-left">
            <view class="name">
                {{item.fundName}}
            </view>
            <view class="gainTotal" style="color:{{tools.getColorByGain(item.gainTotal)}}">
                近2日涨幅:  {{item.gainTotal}}%
            </view>
            <view class="grayText">
                昨日股价:  {{item.lastNetValue}}
            </view>
            <view class="grayText">
                今日最低:  {{item.curPriceLowest}}
            </view>
        </view>

        <view class="info-right">
            <view class="name">
              <text decode="true">&ensp;&ensp;</text>
            </view>
            <view class='blackText'>
                今日预估：  {{item.curGain}}%
            </view>
            <view class="blackText" style="color:{{tools.getColorByGain(item.lastGain)}}">
                今日股价:  {{item.curNetValue}}
            </view>
            <view class='grayText'>
                今日最高：  {{item.curPriceHighest}}
            </view>
        </view>
    </view>
    <view class="hr" />
</block>
